{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "preLaunchTask": "start-backend-with-cleanup"
    },
    {
      "name": "Backend: Pytest Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "-s"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Backend: Pytest All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "app/tests",
        "-v"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Backend: Pytest Contract Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "app/tests/contract",
        "-v",
        "--tb=short"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Backend: Pytest User Story 3 Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "app/tests/contract/test_users_list.py",
        "app/tests/contract/test_users_create.py",
        "app/tests/contract/test_users_role.py",
        "app/tests/unit/test_permissions.py",
        "app/tests/integration/test_role_assignment.py",
        "-v",
        "--tb=short"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Frontend: Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/augeo-admin/src",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "preLaunchTask": "start-frontend-with-cleanup",
      "serverReadyAction": {
        "pattern": "Local:.*(http://localhost:[0-9]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Frontend: Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/augeo-admin/src",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "preLaunchTask": "start-frontend-with-cleanup",
      "serverReadyAction": {
        "pattern": "Local:.*(http://localhost:[0-9]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Docker: Postgres",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "docker",
      "runtimeArgs": [
        "exec",
        "-it",
        "augeo_postgres",
        "psql",
        "-U",
        "augeo_user",
        "-d",
        "augeo_db"
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (Backend + Frontend)",
      "configurations": [
        "Backend: FastAPI"
      ],
      "preLaunchTask": "start-frontend-with-cleanup",
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      },
      "stopAll": true
    }
  ]
}
