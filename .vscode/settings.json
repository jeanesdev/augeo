{
    "chat.promptFilesRecommendations": {
        "speckit.constitution": true,
        "speckit.specify": true,
        "speckit.plan": true,
        "speckit.tasks": true,
        "speckit.implement": true
    },
    "chat.tools.terminal.autoApprove": {
        ".specify/scripts/bash/": true,
        ".specify/scripts/powershell/": true
    },
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "app/tests",
        "-v"
    ],
    "python.testing.cwd": "${workspaceFolder}/backend",
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.defaultInterpreterPath": "/home/jjeanes/.cache/pypoetry/virtualenvs/augeo-backend-koj7Cp7X-py3.12/bin/python",
    "python.envFile": "${workspaceFolder}/backend/.env",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.terminal.activateEnvironment": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "ms-python.python",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "typescript.tsdk": "frontend/augeo-admin/node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.defaultFormatter": "vscode.markdown-language-features",
        "editor.wordWrap": "on"
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.rulers": [
        88,
        120
    ],
    "files.associations": {
        "*.yaml": "yaml",
        "*.yml": "yaml",
        ".env*": "properties"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.pytest_cache": true,
        "**/htmlcov": true,
        "**/.coverage": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.venv": true,
        "**/htmlcov": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}/backend"
    },
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#2e9672",
        "activityBar.background": "#2e9672",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#d7b6e9",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#2e9672",
        "statusBar.background": "#226f54",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#2e9672",
        "statusBarItem.remoteBackground": "#226f54",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#226f54",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#226f5499",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.remoteColor": "#226f54"
}
