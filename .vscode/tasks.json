{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kill-backend",
      "type": "shell",
      "command": "pkill -f 'uvicorn app.main:app' || true",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "kill-frontend",
      "type": "shell",
      "command": "pkill -f 'vite/bin/vite\\.js' || true",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "kill-all-servers",
      "dependsOn": [
        "kill-backend",
        "kill-frontend"
      ],
      "dependsOrder": "parallel",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "start-fullstack-with-cleanup",
      "dependsOn": [
        "kill-all-servers",
        "poetry-install-backend",
        "pnpm-dev-frontend"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "start-backend-with-cleanup",
      "dependsOn": [
        "kill-backend",
        "poetry-install-backend"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "start-frontend-with-cleanup",
      "dependsOn": [
        "kill-frontend",
        "pnpm-dev-frontend"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "poetry-install-backend",
      "type": "shell",
      "command": "poetry",
      "args": [
        "install"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "pnpm-dev-frontend",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source ~/.nvm/nvm.sh && nvm use 22 && pnpm dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend/augeo-admin"
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*",
          "endsPattern": "^.*Local:.*http://localhost:5173.*"
        }
      }
    },
    {
      "label": "docker-up",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "up",
        "-d"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "docker-down",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "down"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "backend-tests",
      "type": "shell",
      "command": "poetry",
      "args": [
        "run",
        "pytest",
        "app/tests",
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "backend-alembic-upgrade",
      "type": "shell",
      "command": "poetry",
      "args": [
        "run",
        "alembic",
        "upgrade",
        "head"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "backend-mypy",
      "type": "shell",
      "command": "poetry",
      "args": [
        "run",
        "mypy",
        "app"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "backend-ruff-check",
      "type": "shell",
      "command": "poetry",
      "args": [
        "run",
        "ruff",
        "check",
        "."
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
