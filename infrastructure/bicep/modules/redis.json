{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "9028351442075140739"
    }
  },
  "parameters": {
    "redisCacheName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Redis cache"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region"
      }
    },
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "staging",
        "production"
      ],
      "metadata": {
        "description": "Environment (dev, staging, production)"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for the resource"
      }
    }
  },
  "variables": {
    "skuConfigs": {
      "dev": {
        "name": "Basic",
        "family": "C",
        "capacity": 0
      },
      "staging": {
        "name": "Standard",
        "family": "C",
        "capacity": 1
      },
      "production": {
        "name": "Standard",
        "family": "C",
        "capacity": 1
      }
    },
    "config": "[variables('skuConfigs')[parameters('environment')]]"
  },
  "resources": [
    {
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2023-08-01",
      "name": "[parameters('redisCacheName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "sku": {
          "name": "[variables('config').name]",
          "family": "[variables('config').family]",
          "capacity": "[variables('config').capacity]"
        },
        "enableNonSslPort": false,
        "minimumTlsVersion": "1.2",
        "publicNetworkAccess": "Enabled",
        "redisConfiguration": "[if(equals(parameters('environment'), 'production'), createObject('maxmemory-policy', 'allkeys-lru', 'aof-backup-enabled', 'true'), createObject('maxmemory-policy', 'allkeys-lru'))]"
      }
    }
  ],
  "outputs": {
    "redisCacheId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Cache/redis', parameters('redisCacheName'))]"
    },
    "redisCacheName": {
      "type": "string",
      "value": "[parameters('redisCacheName')]"
    },
    "redisCacheHostname": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Cache/redis', parameters('redisCacheName')), '2023-08-01').hostName]"
    },
    "redisCachePort": {
      "type": "int",
      "value": "[reference(resourceId('Microsoft.Cache/redis', parameters('redisCacheName')), '2023-08-01').sslPort]"
    }
  }
}