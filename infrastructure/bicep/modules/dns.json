{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "7720985685083631604"
    }
  },
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "staging",
        "production"
      ],
      "metadata": {
        "description": "Environment name (dev, staging, production)"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "Custom domain name (e.g., augeo.app)"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Resource tags"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/dnsZones",
      "apiVersion": "2023-07-01-preview",
      "name": "[parameters('domainName')]",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "zoneType": "Public"
      }
    }
  ],
  "outputs": {
    "dnsZoneId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/dnsZones', parameters('domainName'))]"
    },
    "dnsZoneName": {
      "type": "string",
      "value": "[parameters('domainName')]"
    },
    "nameServers": {
      "type": "array",
      "value": "[reference(resourceId('Microsoft.Network/dnsZones', parameters('domainName')), '2023-07-01-preview').nameServers]"
    },
    "dnsZoneResourceGroup": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "nameServerInstructions": {
      "type": "string",
      "value": "Configure these nameservers at your domain registrar:\n${join(dnsZone.properties.nameServers, '\\n')}\n\nAfter configuring, DNS propagation may take 24-48 hours.\nVerify with: dig NS ${domainName}\n"
    }
  }
}