{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "2320777125784817625"
    }
  },
  "parameters": {
    "appServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region"
      }
    },
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "staging",
        "production"
      ],
      "metadata": {
        "description": "Environment (dev, staging, production)"
      }
    },
    "appServicePlanId": {
      "type": "string",
      "metadata": {
        "description": "App Service Plan ID"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Key Vault name for secrets"
      }
    },
    "appInsightsConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Application Insights connection string"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for the resource"
      }
    },
    "dockerImage": {
      "type": "string",
      "defaultValue": "ghcr.io/jeanesdev/augeo-backend:latest",
      "metadata": {
        "description": "Docker image to deploy"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appServiceName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "kind": "app,linux,container",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[parameters('appServicePlanId')]",
        "httpsOnly": true,
        "clientAffinityEnabled": false,
        "siteConfig": {
          "linuxFxVersion": "[format('DOCKER|{0}', parameters('dockerImage'))]",
          "alwaysOn": "[not(equals(parameters('environment'), 'dev'))]",
          "healthCheckPath": "/health",
          "http20Enabled": true,
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "appSettings": [
            {
              "name": "ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "LOG_LEVEL",
              "value": "[if(equals(parameters('environment'), 'dev'), 'DEBUG', 'INFO')]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[parameters('appInsightsConnectionString')]"
            },
            {
              "name": "DATABASE_URL",
              "value": "[format('@Microsoft.KeyVault(VaultName={0};SecretName=database-url)', parameters('keyVaultName'))]"
            },
            {
              "name": "REDIS_URL",
              "value": "[format('@Microsoft.KeyVault(VaultName={0};SecretName=redis-url)', parameters('keyVaultName'))]"
            },
            {
              "name": "JWT_SECRET",
              "value": "[format('@Microsoft.KeyVault(VaultName={0};SecretName=jwt-secret)', parameters('keyVaultName'))]"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "8000"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "https://ghcr.io"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "appServiceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]"
    },
    "appServiceName": {
      "type": "string",
      "value": "[parameters('appServiceName')]"
    },
    "appServiceDefaultHostname": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appServiceName')), '2022-09-01').defaultHostName]"
    },
    "appServicePrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('appServiceName')), '2022-09-01', 'full').identity.principalId]"
    }
  }
}
