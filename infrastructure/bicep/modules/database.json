{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "17082705509729236599"
    }
  },
  "parameters": {
    "postgresServerName": {
      "type": "string",
      "metadata": {
        "description": "Name of the PostgreSQL server"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region"
      }
    },
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "staging",
        "production"
      ],
      "metadata": {
        "description": "Environment (dev, staging, production)"
      }
    },
    "administratorLogin": {
      "type": "string",
      "defaultValue": "augeo_admin",
      "metadata": {
        "description": "Administrator username"
      }
    },
    "administratorPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Administrator password"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for the resource"
      }
    }
  },
  "variables": {
    "skuConfigs": {
      "dev": {
        "tier": "Burstable",
        "name": "Standard_B1ms",
        "storageSizeGB": 32,
        "backupRetentionDays": 7,
        "geoRedundantBackup": false,
        "highAvailability": false
      },
      "staging": {
        "tier": "GeneralPurpose",
        "name": "Standard_D2s_v3",
        "storageSizeGB": 128,
        "backupRetentionDays": 7,
        "geoRedundantBackup": false,
        "highAvailability": false
      },
      "production": {
        "tier": "GeneralPurpose",
        "name": "Standard_D2s_v3",
        "storageSizeGB": 128,
        "backupRetentionDays": 30,
        "geoRedundantBackup": true,
        "highAvailability": true
      }
    },
    "config": "[variables('skuConfigs')[parameters('environment')]]"
  },
  "resources": [
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2022-12-01",
      "name": "[parameters('postgresServerName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "[variables('config').name]",
        "tier": "[variables('config').tier]"
      },
      "properties": {
        "version": "15",
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorPassword')]",
        "storage": {
          "storageSizeGB": "[variables('config').storageSizeGB]"
        },
        "backup": {
          "backupRetentionDays": "[variables('config').backupRetentionDays]",
          "geoRedundantBackup": "[if(variables('config').geoRedundantBackup, 'Enabled', 'Disabled')]"
        },
        "highAvailability": "[if(variables('config').highAvailability, createObject('mode', 'ZoneRedundant'), createObject('mode', 'Disabled'))]"
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
      "apiVersion": "2022-12-01",
      "name": "[format('{0}/{1}', parameters('postgresServerName'), 'augeo')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresServerName'))]"
      ]
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/firewallRules",
      "apiVersion": "2022-12-01",
      "name": "[format('{0}/{1}', parameters('postgresServerName'), 'AllowAzureServices')]",
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresServerName'))]"
      ]
    }
  ],
  "outputs": {
    "postgresServerId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresServerName'))]"
    },
    "postgresServerName": {
      "type": "string",
      "value": "[parameters('postgresServerName')]"
    },
    "postgresServerFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresServerName')), '2022-12-01').fullyQualifiedDomainName]"
    },
    "postgresDatabaseName": {
      "type": "string",
      "value": "augeo"
    }
  }
}
